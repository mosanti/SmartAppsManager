<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_center"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/ImageViewEncrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/ic_empty_gallery"/>

    <TextView
        android:id="@+id/textViewEncrypt"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:text="@string/text_empty_picsvideo_view_slogon"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/picsvideolockbtn"
        android:layout_width="162dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/btn_start_selector"
        android:text="@string/btn_startAppLock"
        android:onClick="Encryptfile_btnClick"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/textViewListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="20dp"
        android:textColor="#FF69B4"
        android:visibility="gone"
        android:text="文件列表"/>




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/PicsVideoLockListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/listline" >

        </ListView>

        <Button
            android:id="@+id/roundButton"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="20dip"
            android:background="@drawable/radius_shape"
            android:text="+"
            android:textSize="30dip"
            android:textColor="#FFFFFF"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textViewPrompt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="22dp"
            android:textColor="@android:color/black"
            android:text="当前隐藏列表为空，请点击右下角按钮图标添加需隐藏的文件"/>

    </RelativeLayout>

</LinearLayout>