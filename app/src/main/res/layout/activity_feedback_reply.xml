<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="5.0dp" >
        <TextView
            android:id="@+id/feedback_reply_title"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="@string/fb_notification_title"
            android:layout_height="38.0dp"
            android:textColor="#ff333333"
            android:textSize="20.0sp" />
        <TextView
            android:id="@+id/feedback_reply"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/mm_edit_focused"
            android:layout_height="348.0dp"
            android:textColor="#ff333333"
            android:textSize="18.0sp" />

        <Button
            android:id="@+id/feedback_backbtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_start_selector"
            android:padding="10.0dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="18.0sp" />

    </LinearLayout>

</LinearLayout>