<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slidemenu_bg"
    android:orientation="vertical" >

    <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:gravity="center_vertical" 
         android:paddingTop="5dp"
         android:background="@drawable/menu_button_bg" 
         android:layout_height="wrap_content" >
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingLeft="20dp"
        android:src="@drawable/person_image_empty"
         />
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/user_center"
        android:textSize="14dp"
        android:textColor="@color/background_center"
        android:textStyle="bold"
         />
       </LinearLayout>
     <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="@string/user_email"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/background_center"
         />
     
    <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:gravity="center_vertical" 
         android:paddingTop="20dp"
         android:background="@drawable/menu_button_bg" 
         android:layout_height="wrap_content" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:src="@drawable/ic_menu_hide_app"
         />
 
    <Button
        android:id="@+id/hide_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"  
        android:background="@drawable/menu_button_bg"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:text="@string/hide_apps" />
   </LinearLayout>

    <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:gravity="center_vertical" 
         android:paddingTop="5dp"
         android:background="@drawable/menu_button_bg" 
         android:layout_height="wrap_content" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:src="@drawable/ic_menu_protect_eye"
         />
 
    <Button
        android:id="@+id/eye_protect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"  
        android:background="@drawable/menu_button_bg"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:text="@string/protect_eye" />
   </LinearLayout>

    <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:gravity="center_vertical" 
         android:paddingTop="5dp"
         android:background="@drawable/menu_button_bg" 
         android:layout_height="wrap_content" >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:src="@drawable/ic_menu_message_tts"
         />
 
    <Button
        android:id="@+id/message_tts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"  
        android:background="@drawable/menu_button_bg"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:text="@string/message_tts" />
   </LinearLayout>
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:src="@drawable/logo"
         />
   <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:paddingTop="5dp"
         android:paddingLeft="2dp"
         android:layout_height="wrap_content" >
    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/menu_button_bg"
        android:src="@drawable/toolbar_settings"
         />
    <ImageButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/menu_button_bg"
        android:src="@drawable/toolbar_share"
         />
    <ImageButton
        android:id="@+id/send_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/menu_button_bg"
        android:src="@drawable/toolbar_send"
         />
   </LinearLayout>
</LinearLayout>
